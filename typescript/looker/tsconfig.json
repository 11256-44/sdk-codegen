  {
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": true
      }
    ],
    "target": "ES5",
    "lib": ["es2015", "es6", "dom", "es2015.promise"],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "index.ts"
  ]
}
