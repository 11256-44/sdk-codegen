{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@looker/sdk": ["packages/sdk/src"],
      "@looker/sdk-codegen-scripts": ["packages/scripts/src"],
      "@looker/sdk-codegen": ["packages/sdk-codegen/src"],
      "@looker/sdk-utils": ["packages/utils/src"],
      "@looker/test-utils": ["packages/test-utils/src"]
    }
  },
  "include": ["packages/*/src"],
  "exclude": ["packages/*/lib", "packages/*/dist"]
}
